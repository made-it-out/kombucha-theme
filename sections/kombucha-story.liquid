<section class="story">
    <div class="container">
        <h2 class="story__heading">{{section.settings.heading | escape}}</h2>
        <p class="story__description">{{section.settings.description | escape}}</p>
    </div>
</section>

{%schema%}
{
    "name": "Kombucha Story",
    "settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Arie Kombucha" 
    },
    {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "We loved designing this entire series of labels for Singapore based Arie Kombucha. The label's philosophy concerning fresh and energetic ingredients was key when creating this lively and colourful universe." 
    }
    ],
    "presets": [
    {
        "name": "Kombucha Story"
    }
    ]
}
{%endschema%}